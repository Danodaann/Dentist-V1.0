<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InicioSesion</servlet-name>
        <servlet-class>Servlet.InicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarUsuarios</servlet-name>
        <servlet-class>Servlet.RegistrarUsuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InicioSesionDoc</servlet-name>
        <servlet-class>Servlet.InicioSesionDoc</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Citas</servlet-name>
        <servlet-class>Servlet.Citas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgendarCitas</servlet-name>
        <servlet-class>Servlet.AgendarCitas</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InicioSesion</servlet-name>
        <url-pattern>/iniciar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarUsuarios</servlet-name>
        <url-pattern>/nuevousuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioSesionDoc</servlet-name>
        <url-pattern>/iniciardoc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Citas</servlet-name>
        <url-pattern>/Citas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgendarCitas</servlet-name>
        <url-pattern>/citas</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
